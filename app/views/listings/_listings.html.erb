<div class="rows">
    <% @recent_listings.each do |listing| %>
    <div class="listing">
      <ul>
        <li><%= link_to image_tag(listing.property.images.first.photo_url(:thumb)), listing %></li>
        <li><%= listing.property.address %></li>
        <li><%= listing.property.description %></li><br>
        <li><%= number_to_currency(listing.rent_per_month) %> per month</li>
      </ul>
    </div>
    <% end %>
</div>
