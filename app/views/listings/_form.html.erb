    <%= f.check_box :open_to_student_only %>
    <%= f.text_field :rent_per_month %>
  </div>
  <div class="field">
    <%= f.label :is_available %><br>
    <%= f.datetime_select :is_available %>
  </div>
  <div class="field">
    <%= f.label :schedule, "When are you open to show it?" %><br>
    <%= f.text_field :schedule, :placeholder => "Ex. Mondays after 5pm" %>
  </div>
  <div class="actions">
    <%= f.submit :id => "submit-button" %>
  </div>
