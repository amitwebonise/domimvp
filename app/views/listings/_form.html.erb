<%= simple_form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <p><%= link_to "Edit property", edit_property_path(@listing, @property) %></p>
  </div>  
  <%= f.collection_select(:property_id, Property.all, :id, :address) %>
  <div class="field">
    <%= f.label :open_to_student_only, "Student only?" %>         |
