<% if current_user.properties.nil? %>
  <h1>Get on this my friend!</h1>
<% else %>
<div class="property-container">
  <% @current_user.properties.each do |property| %>
    <div class="property">
      <ul>
        <li>
          <%= image_tag(property.images.first.photo_url) %>
        </li>  
        <li><%= property.address %></li>
        <li><%= property.total_bedrooms %> bedrooms</li>
        <li><%= property.total_bathrooms %> bathrooms</li>
      </ul>
    </div>
  <% end %>
</div>
<% end %>