<p id="notice"><%= notice %></p>


<div class='image_slider'>
    <ul>
      <%= image_tag(@property.images.first.photo_url) %>
    </ul>
  </div>
  <ul class='thumbnails'>
    <% @property.images.each do |image| %>
        <li data-image-url="<%=image.photo_url(:gallery)%>"><%= image_tag(image.photo_url(:gallery)) %></li>
    <% end %>
  </ul>
</div>

<p>
  <strong>Total bedrooms:</strong>
  <%= @property.total_bedrooms %>
</p>

<p>
  <strong>Total bathrooms:</strong>
  <%= @property.total_bathrooms %>
</p>

<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>City, State:</strong>
  <%= @property.city %>, <%= @property.state %>
</p>

<p>
  <strong>Zip Code:</strong>
  <%= @property.zip_code %>
</p>

<p>
  <strong>Description:</strong>
  <%= @property.description %>
</p>

<p>
  <strong>Commute to campus in minutes:</strong>
  <%= @property.commute_to_campus_in_minutes %>
</p>


<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
